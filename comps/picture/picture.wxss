/* pages/picture/picture.wxss */

.mod_picture {
  margin: 10px 0 50px 0;
}

.picture_item {
  position: relative;
  float: left;
  overflow: hidden;
  margin: 0 0 6px 0;
  width: calc((100% - 6px)/2);
  height: 180px;
}

.picture_item:nth-of-type(odd) {
  margin-right: 6px;
}

.pic {
  width: 100%;
}

.tit {
  position: absolute;
  bottom: 0;
  left: 0;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  width: 100%;
  height: 25px;
  line-height: 25px;
  font-size: 12px;
  color: #fff;
  text-align: center;
  background-color: rgba(0, 0, 0, 0.3);
}