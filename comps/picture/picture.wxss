/* pages/picture/picture.wxss */

.mod_picture {
  box-sizing: border-box;
  height: 100%;
  position: relative;
  padding: 10px 0 50px 0;
}

.picture_item {
  position: relative;
  float: left;
  overflow: hidden;
  margin: 0 15px 6px 15px;
  width: calc((100% - 36px)/2);
  height: 150px;
}

.picture_item:nth-of-type(odd) {
  margin-right: 6px;
}

.picture_item:nth-of-type(even) {
  margin-left: 0;
}

.pic {
  width: 100%;
}

.tit {
  box-sizing: border-box;
  position: absolute;
  bottom: 0;
  left: 0;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  padding: 0 10px;
  width: 100%;
  height: 25px;
  line-height: 25px;
  font-size: 12px;
  color: #fff;
  text-align: center;
  background-color: rgba(0, 0, 0, 0.3);
}

.mod_swiper {
  position: absolute;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  background-color: rgba(0, 0, 0, 0.7);
}

.swiper_item {
  display: flex;
  justify-content: center;
  align-items: center;
}

.image {
  margin-top: 51px;
  width: 100%;
}