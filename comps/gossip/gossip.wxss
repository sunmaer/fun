/* pages/gossip/gossip.wxss */

.mod_gossip {
  box-sizing: border-box;
  color: #222;
}

.gossip_item {
  display: flex;
  flex-direction: row;
  padding: 10px 0;
  height: 90px;
  border-bottom: 1px solid rgba(221, 221, 221, 0.6);
}

.item_content {
  flex: 1 1 auto;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  margin-right: 10px;
  width: calc(100% - 130px);
}

.title {
  flex: 0 0 auto;
  height: 24px;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.content {
  flex: none;
  height: calc(100% - 44px);
  line-height: 23px;
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  word-wrap: break-word;
  white-space: normal;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  font-size: 14px;
}

.info {
  flex: 0 0 auto;
  display: flex;
  flex-direction: row;
  height: 20px;
}

.avatar {
  margin-right: 7px;
  width: 20px;
  height: 100%;
  border-radius: 50%;
}

.nick {
  line-height: 20px;
  font-size: 12px;
  color: #999;
}

.comment {
  margin-left: 20px;
  line-height: 20px;
  font-size: 12px;
  color: #999;
}

.like {
  margin-left: 10px;
  line-height: 20px;
  font-size: 12px;
  color: #999;
}

.item_cover {
  flex: 0 0 auto;
  width: 120px;
  height: 100%;
  overflow: hidden;
}

.img {
  width: 100%;
}