<!--pages/exit/exit.wxml-->
<view class="mod_edit">
  <view class="weui-cells__title">标题</view>
  <view class="weui-cells weui-cells_after-title">
    <view class="weui-cell weui-cell_input">
      <view class="weui-cell__bd">
        <input class="weui-input title" placeholder="请输入标题" />
      </view>
    </view>
  </view>

  <view class="weui-cells__title">内容</view>
  <view class="weui-cells weui-cells_after-title">
    <view class="weui-cell">
      <view class="weui-cell__bd">
        <textarea class="weui-textarea content" placeholder="请输入内容" style="height: 3.3em" />
        <view class="weui-textarea-counter">0/200</view>
      </view>
    </view>
  </view>
  <button class="weui-btn" type="primary" bindtap="showTopTips">发表</button>
</view>