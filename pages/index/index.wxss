/* index.wxss */
@import '../../comps/joke/joke.wxss';
@import '../../comps/gossip/gossip.wxss';
@import '../../comps/picture/picture.wxss';

page, .page, .page__bd {
  height: 100%;
  overflow: hidden;
}

.page__bd {
  padding-bottom: 0;
}

.weui-navbar {
  position: fixed;
  background-color: #fff;
}

.weui-bar__item_on .weui-navbar__title {
  color: #65c294;
}

.weui-navbar__slider {
 background-color: #65c294;
}

.weui-tab__panel {
  margin-top: 50px;
  padding-top: 0;
  height: 100%;
}

.weui-tab__content {
  padding: 0 14px;
}

/* 搞笑段子和娱乐八卦通用样式 */
.item_content {
  flex: 1 1 auto;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  margin-right: 10px;
  width: calc(100% - 130px);
}

.title {
  flex: 0 0 auto;
  height: 24px;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.content {
  flex: none;
  height: calc(100% - 44px);
  line-height: 23px;
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  word-wrap: break-word;
  white-space: normal;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  font-size: 14px;
}

.info {
  flex: 0 0 auto;
  display: flex;
  flex-direction: row;
  height: 20px;
}

.avatar {
  margin-right: 7px;
  width: 20px;
  height: 100%;
  border-radius: 50%;
}

.nick {
  line-height: 20px;
  font-size: 12px;
  color: #999;
}

.comment {
  margin-left: 20px;
  line-height: 20px;
  font-size: 12px;
  color: #999;
}

.like {
  margin-left: 10px;
  line-height: 20px;
  font-size: 12px;
  color: #999;
}

.item_cover {
  flex: 0 0 auto;
  width: 120px;
  height: 100%;
  overflow: hidden;
}

.img {
  width: 100%;
}