/* pages/joke/joke.wxss */
@import "../../css/font.wxss"

.mod_joke {
  box-sizing: border-box;
  padding: 0 10px;
  color: #222;
}
.joke_item {
  display: flex;
  flex-direction: row;
  padding: 10px 0;
  height: 90px;
  border-bottom: 1px solid rgba(221, 221, 221, 0.6);
}
.item_content {
  flex: 1 1 auto;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  margin-right: 10px;
  width: calc(100% - 120px);
}
.text {
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  word-wrap: break-word;
  white-space: normal;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
  font-size: 14px;
}
.info {
  display: flex;
  flex-direction: row;
  height: 20px;
  font-size: 12px;
  color: #999;
}
.avatar {
  margin-right: 7px;
  width: 20px;
  height: 100%;
  border-radius: 50%;
}
.nick {
  line-height: 20px;
}
.icon-comment {
  margin-left: 20px;
  line-height: 20px;
  font-size: 15px;
}
.comment {
  margin-left: 2px;
  line-height: 20px;
}
.icon-like {
  margin-left: 10px;
  line-height: 20px;
  font-size: 14px;
}
.like {
  margin-left: 2px;
  line-height: 20px;
}
.item_cover {
  flex: 0 0 auto;
  width: 120px;
  height: 100%;
  overflow: hidden;
}
.img {
  width: 100%;
}